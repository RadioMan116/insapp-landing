{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error", "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
	},
	"settings" : {
		"polyfills" : [
		  // Пример маркировки всего API, а также всех методов и свойств как полифилс
		  "Promise" ,
		  // Пример маркировки определенного метода API как полифилла
		  "WebAssembly.compile " ,
		  // Пример API без свойства (то есть функции)
		  " fetch " ,
		  // Пример метода экземпляра, должен добавить` .prototype.`
		  "Array.prototype.push"
		]
	  }
}